<div class="comments">
    {{!-- change post.comments with 'this' because it uses an array instead of an object --}}
    {{#each this }} {{!-- ...you could also add {{#each post.comments as |comment|}} --}}
    <section class="comment">
        <div class="meta">
            {{ user.username }} on {{ format_date created_at }} {{!-- implemented /utils/format_date, similar to formated_date(created_at) --}}
        </div>
        <div class="text">
            {{ comment_text }}
        </div>
    </section>
    {{/each}}
</div>